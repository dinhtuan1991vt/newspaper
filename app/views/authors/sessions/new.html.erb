<h2><%= t('.log_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label  t('.username') %><br />
    <%= f.text_field :login, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label t('.password') %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if session[:login_attempts] && session[:login_attempts].to_i >= 1 %>
    <%= recaptcha_tags %>
  <% end %>
  <br>
  <div class="actions">
    <%= f.submit t('.log_in'), class: "btn btn-danger" %>
  </div>
<% end %>
