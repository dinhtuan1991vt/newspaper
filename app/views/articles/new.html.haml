= form_for :article, url: articles_path  do |f|
  %div.form-group
    = f.label :name
    = f.text_field :name, class:"form-control", required: true
  %div.form-group
    = f.label :text
    = f.text_area :text, class:"form-control", required: true
  %div.form-group
    = f.label :author_id
    = collection_select(:article, :author_id, Author.all, :id, :name, {prompt: "Select an author"}, {class: "form-control", required: true})
  = f.submit "Save article", class:"btn btn-default"